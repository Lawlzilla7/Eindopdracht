<!DOCTYPE ejs>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aanmelden</title>

    <link href="styles/style.css" rel="stylesheet">
    <link rel="icon" type="image/svg+xml" href="./images/project_tech_logo_1.png">
</head>

<body class="BodySignIn">
    <%- include('../partials/navHeader'); %> 
    <main>
        <section class="LogInWrapper">
            <form id="accountForm" action="/add-account" method="POST">                    
                <h1>Maak hier je account aan!</h1>
                <div class="input-box">
            <input type="text" name="username" placeholder="Gebruikersnaam" required>
            </div>
            <div class="input-box">
                    <input type="email" name="email" placeholder="Email" required>
                </div>

                <div class="input-box">
                    <input type="password" name="password" placeholder="Wachtwoord" required>
                </div>

                <input type="submit" value="account aamaken" class="btn">

            </form>
        </section>

    </main>

    <%- include('../partials/navFooter'); %> 

</body>