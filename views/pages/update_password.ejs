<body class="BodyUpdate">

    <%- include('../partials/navHeader'); %>

        <main class="update-wrapper">

            <section class="update-box">
                <h2> Wijzig jouw wachtwoord </h2>

                <form id="updatePassword" action="/updated_password" method="POST"
                    enctype="application/x-www-form-urlencoded">
                    <div class="update-input-box">
                        <input type="password" name="updatedPassword" placeholder="Nieuw wachtwoord" required>
                    </div>
                    <input type="submit" value="Wijzig" class="btn">
                </form>
            </section>
        </main>

        <%- include('../partials/navFooter'); %>

            <script defer src="/scripts/script.js"> </script>

</body>