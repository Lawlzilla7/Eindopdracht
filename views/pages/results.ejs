<!DOCTYPE ejs>
<html lang="en">
<head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Favorites</title>
        <link href="styles/style.css" rel="stylesheet">
        <link rel="icon" type="image/svg+xml" href="https://placehold.co/100x100">
</head>

    <body>

        <%- include('../partials/navHeader'); %>

    <main id="ResultsPage">
        <h2><%= title %></h2>
        <section id="theList">
            <ul class="SearchResultList list">
            <% autos.forEach(auto => { %>
                <li 
                    class="SearchResult" style="cursor: pointer; background-image: url(/images/auto/<%= auto.afbeelding %>)"
                    onclick="window.location='/detail/<%= auto._id %>'"
                >
                    <p>Brandstof: <%= auto.brandstof %></p>
                    <p>Bouwjaar: <%= auto.Bouwjaar %></p>
                    <p>KM Stand: <%= auto.kilometers %></p>
                    <h3 class="merk"><%= auto.merk %></h3>
                    <% if(mode && mode==='favorites') { %>
                        <form method="post" action="/remove-bookmark" onsubmit="return confirm('Bookmark verwijderen?')">
                            <input type="hidden" name="carId" id="carId" value="<%= auto._id %>">
                            <button>Verwijder</button>
                        </form>
                    <% } %>
                </li>
            <% }) %>
          </ul>   
    </main>
    
    
    <%- include('../partials/navFooter'); %>

    <script src="./scripts/script.js"></script>
    <script type="module" src="//cdnjs.cloudflare.com/ajax/libs/list.js/2.3.1/list.min.js"></script>
</body>

</html>